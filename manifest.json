{
  "name": "Pikabu User Badges",
  "description": "Shows Badges over username",
  "version": "0.1",
  "manifest_version": 3,
  "options_page": "options.html",
  // "background": {
  //   "service_worker": "background.js"
  // },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "/images/get_started128.png"
    }
  },
  "icons": {
    "128": "/images/get_started128.png"
  },
  "content_scripts": [
    {
        "matches": ["https://pikabu.ru/*"],
        "js": ["content_init.js"],
        "css": ["css/content.css", "css/fontawesome.min.css", "css/solid.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "content_main.js", "js/*", "css/fontawesome.min.css", "css/solid.css", "webfonts/*"],
      "matches": ["https://pikabu.ru/*" ]
    }
  ]
}